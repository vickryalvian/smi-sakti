# =========================
# DISABLE DIRECTORY LISTING
# =========================
Options -Indexes

# =========================
# PROTECT PRIVATE FOLDER
# =========================
<Directory "/home/vickryid/peta.kabsukabumisakti.my.id/private">
    Order allow,deny
    Deny from all
</Directory>

# =========================
# PROTECT CONFIG AND DATA FILES
# =========================
<FilesMatch "(config|data)\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# =========================
# ALLOW ACCESS ONLY TO PUBLIC FILES
# =========================
<FilesMatch "\.(html|css|js|png|jpg|jpeg|gif|svg)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# =========================
